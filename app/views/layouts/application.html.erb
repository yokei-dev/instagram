<!DOCTYPE html>
<html>
  <head>
    <title>Myapp</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
  <div class="container">
    <% if current_user %>
        <%= link_to "投稿", "/posts/new", class: "btn btn-primary" %>  
        <%= link_to "はじめに戻る", root_path, class: "navbar__brand navbar__mainLogo" %>
        <%= link_to "投稿一覧", "/posts", class: "nav-link commonNavIcon profile-icon" %>
        <%= link_to "サインアウト","/users/sign_out" %>
    <% else %>
        <%= link_to "サインイン","/users/sign_in" %>
    <% end %>
  </div>
  <% if false %>
    <nav class="navbar navbar-expand-lg navbar-light">
      <div class="container">
        <%= link_to "はじめに戻る", root_path, class: "navbar__brand navbar__mainLogo" %>
        
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarSupportedContent" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarSupportedContent">
          <ul class="navbar-nav ml-md-auto align-items-center">
            <li>
              <%= link_to "投稿", "/posts/new", class: "btn btn-primary" %>
            </li>
            <li>
              <%= link_to "投稿一覧", "/posts", class: "nav-link commonNavIcon profile-icon" %>
            </li>
          </ul>
        </div>
      </div>
    </nav>

  <% end %>
    <%= yield %>
  </body>
</html>
